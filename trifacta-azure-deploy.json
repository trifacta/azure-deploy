{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "trifactaVersion": {
      "type": "string",
      "metadata": {
        "description": "Trifacta application version to deploy"
      },
      "defaultValue": "4.2.0",
      "allowedValues": [
        "4.2.0"
      ]
    },
    "applicationName": {
      "type": "string",
      "metadata": {
        "description": "Unique (per-cluster) application name for the Trifacta edge node"
      },
      "defaultValue": "trifacta"
    },
    "subDomainSuffix": {
      "type": "string",
      "maxLength": 3,
      "metadata": {
        "description": "Unique (per cluster) three-character alphanumeric string used in the application's DNS name."
      },
      "defaultValue": "tri"
    },
    "clusterName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing HDInsight cluster to be used"
      }
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "Virtual machine type for the Trifacta edge node"
      },
      "defaultValue": "Standard_D4_v2",
      "allowedValues": [
        "Standard_A4",
        "Standard_A6",
        "Standard_A7",
        "Standard_A10",
        "Standard_A11",
        "Standard_D4_v2",
        "Standard_D5_v2",
        "Standard_D12_v2",
        "Standard_D13_v2",
        "Standard_D14_v2"
      ]
    }
  },
  "variables": {
    "baseUri": "[concat('https://raw.githubusercontent.com/Trifacta/azure-deploy/', parameters('trifactaVersion'))]",
    "binDir": "bin",
    "setupScript": "prepare-edge-node.sh",
    "trifactaVersionShort": "[replace(parameters('trifactaVersion'), '.', '')]",
    "armTemplateVersion": "1"
  },
  "resources": [
    {
      "name": "[concat(parameters('clusterName'), '/', parameters('applicationName'))]",
      "type": "Microsoft.HDInsight/clusters/applications",
      "apiVersion": "2015-03-01-preview",
      "dependsOn": [],
      "properties": {
        "computeProfile": {
          "roles": [
            {
              "name": "edgenode",
              "targetInstanceCount": 1,
              "hardwareProfile": {
                "vmSize": "[parameters('vmSize')]"
              }
            }
          ]
        },
        "installScriptActions": [
          {
            "name": "[concat('trifacta-', variables('trifactaVersionShort'), '-', variables('armTemplateVersion'), '-', uniquestring(parameters('applicationName')))]",
            "uri": "[concat(variables('baseUri'), '/', variables('binDir'), '/', variables('setupScript'))]",
            "parameters": "",
            "roles": ["edgenode"]
          }
        ],
        "uninstallScriptActions": [],
        "httpsEndpoints": [
          {
            "subDomainSuffix": "[parameters('subDomainSuffix')]",
            "destinationPort": 3005,
            "accessModes": ["webpage"]
          }
        ],
        "applicationType": "CustomApplication"
      }
    }
  ],
  "outputs": {
    "application": {
      "type": "object",
      "value": "[reference(resourceId('Microsoft.HDInsight/clusters/applications/', parameters('clusterName'), parameters('applicationName')))]"
    }
  }
}
